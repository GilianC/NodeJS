<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Chat en temps réel</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }
        .container {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: flex-start;
            margin-top: 40px;
            gap: 32px;
        }
        .sidebar {
            width: 180px;
            min-width: 120px;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 2px 8px rgba(64,93,230,0.08);
            padding: 18px 12px;
            height: 400px;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
        .ad {
            font-size: 16px;
            color: #405de6;
            font-weight: 700;
            text-align: center;
            margin-bottom: 8px;
        }
        .ad-img {
            width: 100%;
            border-radius: 12px;
            margin-bottom: 8px;
        }
        .users-title {
            font-size: 15px;
            color: #5851db;
            font-weight: 600;
            margin-bottom: 8px;
            text-align: center;
        }
        .user-list {
            flex: 1;
            overflow-y: auto;
            padding: 0;
            margin: 0;
            list-style: none;
        }
        .user-list li {
            padding: 6px 0;
            font-size: 14px;
            color: #333;
            border-bottom: 1px solid #e0e7ff;
        }
        .user-list li.me {
            color: #e1306c;
            font-weight: 700;
        }
        .chat-main {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h2 {
            color: #405de6;
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 16px;
        }
        #chat {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 2px 8px rgba(64,93,230,0.08);
            border: none;
            padding: 16px;
            width: 350px;
            height: 400px;
            overflow-y: auto;
            margin-bottom: 16px;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        .bubble {
            max-width: 70%;
            padding: 10px 16px;
            border-radius: 18px;
            margin-bottom: 2px;
            font-size: 15px;
            position: relative;
            word-break: break-word;
            box-shadow: 0 1px 3px rgba(64,93,230,0.07);
        }
        .me {
            background: linear-gradient(135deg, #405de6 0%, #5851db 100%);
            color: #fff;
            align-self: flex-end;
        }
        .other {
            background: #f1f1f1;
            color: #333;
            align-self: flex-start;
        }
        .pseudo {
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 2px;
            color: #405de6;
        }
        #form {
            display: flex;
            width: 350px;
            gap: 8px;
        }
        #input {
            flex: 1;
            padding: 10px;
            border-radius: 16px;
            border: 1px solid #e0e7ff;
            font-size: 15px;
            outline: none;
            background: #f8fafc;
        }
        button {
            background: linear-gradient(135deg, #405de6 0%, #5851db 100%);
            color: #fff;
            border: none;
            border-radius: 16px;
            padding: 0 20px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }
        button:hover {
            background: linear-gradient(135deg, #5851db 0%, #405de6 100%);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="ad">Publicité</div>
            <img src="/image/logo.png" alt="Pub" class="ad-img" />
            <div style="font-size:13px; color:#333; text-align:center;">Découvrez le meilleur chat du web !<br>Essayez-le maintenant.</div>
        </div>
        <div class="chat-main">
            <h2>Chat en temps réel</h2>
            <div id="chat"></div>
            <form id="form" style="display:none;">
                <input id="input" autocomplete="off" /><button>Envoyer</button>
            </form>
            <div id="game" style="margin-top:24px; width:350px; background:#fff; border-radius:16px; box-shadow:0 2px 8px rgba(64,93,230,0.08); padding:16px;">
                <h3 style="color:#e1306c; margin-top:0;">Mini-jeu : Devine le nombre !</h3>
                <div id="game-status" style="margin-bottom:8px; color:#333;">Je pense à un nombre entre 1 et 20.</div>
                <input type="number" id="game-input" min="1" max="20" style="width:80px; padding:6px; border-radius:8px; border:1px solid #e0e7ff; margin-right:8px;" />
                <button id="game-btn" style="background:linear-gradient(135deg,#e1306c 0%,#fd1d1d 100%); color:#fff; border:none; border-radius:8px; padding:6px 16px; font-weight:600;">Proposer</button>
            </div>
        </div>
        <div class="sidebar">
            <div class="users-title">Utilisateurs connectés</div>
            <ul id="user-list" class="user-list"></ul>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        let pseudo = '{{ pseudo|e }}';
        let users = [];
        window.addEventListener('DOMContentLoaded', () => {
            document.getElementById('form').style.display = '';
            socket.emit('new user', pseudo);
        });
        const form = document.getElementById('form');
        const input = document.getElementById('input');
        const chat = document.getElementById('chat');
        const userList = document.getElementById('user-list');

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            if (input.value && pseudo) {
                socket.emit('chat message', { pseudo, message: input.value });
                input.value = '';
            }
        });

        socket.on('chat message', function(data) {
            const wrapper = document.createElement('div');
            wrapper.style.display = 'flex';
            wrapper.style.flexDirection = 'column';
            wrapper.style.alignItems = (data.pseudo === pseudo) ? 'flex-end' : 'flex-start';

            const pseudoDiv = document.createElement('div');
            pseudoDiv.classList.add('pseudo');
            pseudoDiv.textContent = data.pseudo;
            pseudoDiv.style.marginBottom = '2px';
            wrapper.appendChild(pseudoDiv);

            const item = document.createElement('div');
            item.classList.add('bubble');
            if (data.pseudo === pseudo) {
                item.classList.add('me');
            } else {
                item.classList.add('other');
            }
            const msgDiv = document.createElement('div');
            msgDiv.textContent = data.message;
            item.appendChild(msgDiv);
            wrapper.appendChild(item);

            chat.appendChild(wrapper);
            chat.scrollTop = chat.scrollHeight;
        });

        socket.on('user list', function(list) {
            users = list;
            userList.innerHTML = '';
            users.forEach(function(u) {
                const li = document.createElement('li');
                li.textContent = u;
                if (u === pseudo) li.classList.add('me');
                userList.appendChild(li);
            });
        });
        // Mini-jeu : Devine le nombre
        let secret = Math.floor(Math.random() * 20) + 1;
        let attempts = 0;
        const gameInput = document.getElementById('game-input');
        const gameBtn = document.getElementById('game-btn');
        const gameStatus = document.getElementById('game-status');
        gameBtn.addEventListener('click', function(e) {
            e.preventDefault();
            const val = parseInt(gameInput.value);
            if (!val || val < 1 || val > 20) {
                gameStatus.textContent = "Choisis un nombre entre 1 et 20.";
                return;
            }
            attempts++;
            if (val === secret) {
                gameStatus.textContent = `Bravo ! Tu as trouvé le nombre ${secret} en ${attempts} essais.`;
                gameBtn.disabled = true;
                gameInput.disabled = true;
            } else if (val < secret) {
                gameStatus.textContent = "C'est plus !";
            } else {
                gameStatus.textContent = "C'est moins !";
            }
        });
    </script>
</body>
</html>
