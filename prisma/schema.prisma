datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        Int      @id @default(autoincrement())
  pseudo    String
  content   String
  createdAt DateTime @default(now())
}

model User {
  id        Int     @id @default(autoincrement())
  pseudo    String  @unique
  password  String
  email     String  @unique
  isActive  Boolean @default(false)
  createdAt DateTime @default(now())
  validated Boolean @default(false)
  token     String? @unique
}